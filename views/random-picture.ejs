<div class="container mt-3">
    <h4>اختبر الصورة</h4>
    <h4 class="mt-4">الصور</h4>
    <div class="row mt-1">
        <% picture.pictures.forEach((pic) => {%>
            <div class="col-4">
                <div class="card text-bg-dark">
                <img src="<%=pic.url%>" class="card-img" alt="...">
                </div>
            </div>
        <%})%>
    </div>
    <h4 class="mt-4">اي من الإجابات التالية يصف الصور السابقة</h4>
    <ul class="list-group mt-1">
        <%picture.answers.forEach((answer, i)=>{%>
            <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="modal" data-bs-target="#id_<%=i%>">
                <%=answer.text%>
            </a>
            <div class="modal fade" id="id_<%=i%>" tabindex="-1" data-bs-backdrop="static"  aria-labelledby="#id_<%=i%>Label" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title <%=answer.correct ? 'text-success' : ''%> fs-5" id="id_<%=i%>Label">
                            <%=answer.correct ? 'اجابة صحيحة' : 'اجابة خاطئة'%>
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        الوصف:<br/>
                        <%=picture.prompt%>
                    </div>
                    </div>
                </div>
            </div>
        <%})%>
    </ul>
    <button id="btnNew" class="btn btn-primary w-100 mt-3">
        اختبر مرة ثانية
    </button>
</div>
<script>
    $("#btnNew").on("click", () => {
        window.location.reload();
    })
</script>
